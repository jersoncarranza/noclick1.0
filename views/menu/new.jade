extends ../layout.jade
block contenido
  div(class="col-md-5 center-block no-float top-space text-left")
    h1 Agregar Profesor
    form(method="post" action="/menu" style="margin-top:1.5em" enctype="multipart/form-data")
      div(class="form-group")
        label Nombre
        input(type="text" name="title" placeholder="Nombre del Profesor" class="form-control" enctype="multipart/form-data")
      div(class="form-group")
        label Descripción
        textarea(name="description" placeholder="Que materias Da" class="form-control")
      div(class="form-group")
        label Puntos
        input(type="number" name="pricing" placeholder="Puntos" class="form-control")
      div(class="form-group")
        label Imagen
        input(type="file" name="image_item")
      div(class="form-group")
        label Contraseña
        input(type="password" name="password" placeholder="Contraseña" class="form-control")
      div(class="form-group text-right")
        input(type="submit" class="btn btn-info" value="Guardar")